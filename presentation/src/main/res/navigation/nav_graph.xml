<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/BooksFragment">

    <fragment
        android:id="@+id/BooksFragment"
        android:name="com.givekesh.parstasmim.codechallenge.ui.books.BooksFragment"
        android:label="@string/books_fragment_label"
        tools:layout="@layout/fragment_books">

        <action
            android:id="@+id/action_BooksFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.givekesh.parstasmim.codechallenge.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_SecondFragment_to_BooksFragment"
            app:destination="@id/BooksFragment" />
    </fragment>
</navigation>